# wallet

GET         /wallet                                 controllers.ViewController.wallet()
GET         /wallet/                                controllers.ViewController.wallet()
GET         /wallet/eula                            controllers.ViewController.eulaView()
GET         /wallet/termsservice                    controllers.ViewController.termsOfServiceView()
GET         /wallet/backupAccount                   controllers.ViewController.backupAccountView()
GET         /wallet/backupIdentity                  controllers.ViewController.backupIdentityView()
GET         /wallet/setup                           controllers.ViewController.setUpSignUpView(email:Option[String] = None)
GET         /wallet/setup1                          controllers.ViewController.setUpView1()
GET         /wallet/setup2                          controllers.ViewController.setUpView2()
GET         /wallet/signup                          controllers.ViewController.walletSignup(email:Option[String] = None)
GET         /wallet/login                           controllers.ViewController.walletLogin()

GET         /wallet/web/                            controllers.ViewController.walletOldLogin(publicAddr:Option[String] = None)
GET         /wallet/web                             controllers.ViewController.walletOldLogin(publicAddr:Option[String] = None)


GET         /wallet/mobile/:publickey               controllers.ViewController.walletMobileApp(publickey:String)
GET         /wallet/:alias                          controllers.ViewController.walletApp(alias: String)
GET         /wallet/:alias/                         controllers.ViewController.walletApp(alias: String)
GET         /wallet/:alias/captureQRCode            controllers.ViewController.qrScan(alias: String)
